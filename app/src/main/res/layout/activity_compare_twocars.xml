<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    android:overScrollMode="never"
    android:scrollbars="none"
    android:background="#229954">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="5dp" >

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.jaredrummler.materialspinner.MaterialSpinner
                android:id="@+id/spiBrand1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@android:color/transparent"
                android:hint="Select Brand"
                app:ms_dropdown_max_height="400dp"
                app:ms_dropdown_height="wrap_content"
                android:scrollbars="horizontal"
                android:textSize="16sp"
                tools:layout_editor_absoluteX="0dp" />
            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@color/white_greyish" />

            <com.jaredrummler.materialspinner.MaterialSpinner
                android:id="@+id/spinModel1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@android:color/transparent"
                android:hint="Select Model"
                app:ms_dropdown_max_height="400dp"
                app:ms_dropdown_height="wrap_content"
                android:textSize="16sp"
                tools:layout_editor_absoluteX="0dp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                />











        </LinearLayout>
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <View
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:background="@color/white_greyish"
                />
        </LinearLayout>




        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <com.jaredrummler.materialspinner.MaterialSpinner
                android:id="@+id/spinBrand2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@android:color/transparent"
                android:hint="Select Brand"
                app:ms_dropdown_max_height="400dp"
                app:ms_dropdown_height="wrap_content"
                android:scrollbars="horizontal"
                android:textSize="16sp"
                tools:layout_editor_absoluteX="0dp" />
            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@color/white_greyish" />

            <com.jaredrummler.materialspinner.MaterialSpinner
                android:id="@+id/spinModel2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@android:color/transparent"
                android:hint="Select Model"
                app:ms_dropdown_max_height="400dp"
                app:ms_dropdown_height="wrap_content"
                android:textSize="16sp"
                tools:layout_editor_absoluteX="0dp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                />













        </LinearLayout>

    </LinearLayout>




    </HorizontalScrollView>
</ScrollView>





